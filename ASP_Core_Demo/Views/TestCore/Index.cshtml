@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Action</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>
                @Html.ActionLink("Add", "Create")
                @Html.ActionLink("Edit", "Edit", (new { @Name = Model.Rows[i][0] }))
                @Html.ActionLink("Delete", "Delete", (new { @Name = Model.Rows[i][0] }))
            </td>
        </tr>
    }
</table>